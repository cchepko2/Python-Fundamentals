import time

# Must define function before use
def clear_screen() -> None:
    """Clears the screen.
    """
    print("\033c", end="")

def getName():
    name = input("Hi there, enter your full name: ")
    return name

def greet(name):
    print(f'Hello {name}')


# Calling clear_screen function
clear_screen()


name = getName()
time.sleep(0.5)
clear_screen()

print("Hello " + name)

print("What's your last name? ")

# just made an alias for input
lastname = input

print(lastname)

input = "Hello"

print(input)
name = lastname()